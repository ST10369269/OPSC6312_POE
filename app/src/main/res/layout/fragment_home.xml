<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context=".fragments.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/welcome_back_chef"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/discover_your_next_favorite_recipe_today"
            android:textSize="16sp"
            android:textColor="#555555"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

        <!-- Search Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/search_bg"
            android:padding="10dp"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_search"
                android:layout_gravity="center_vertical"
                app:tint="#888888" />

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:background="@null"
                android:hint="@string/search_recipes"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Featured Recipes Title -->
        <TextView
            android:text="ðŸ½ï¸ Featured Recipes"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"/>

        <!-- Featured Recipes Scroll -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Sample Recipe Cards -->
                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/card_bg"
                    android:padding="12dp"
                    android:layout_marginEnd="12dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/placeholder" />

                    <TextView
                        android:text="Spaghetti Bolognese"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textColor="#000000" />

                    <TextView
                        android:text="@string/classic_italian_dish"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textSize="14sp"
                        android:textColor="#777777" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/card_bg"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/placeholder" />

                    <TextView
                        android:text="@string/chicken_salad"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        android:textColor="#000000" />

                    <TextView
                        android:text="@string/fresh_greens_with_chicken"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textSize="14sp"
                        android:textColor="#777777" />
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Categories -->
        <TextView
            android:text="@string/categories"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/btnBreakfast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/breakfast"
                android:backgroundTint="#FF9800"
                android:textColor="#FFF"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnLunch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lunch"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFF"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnDinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dinner"
                android:backgroundTint="#2196F3"
                android:textColor="#FFF"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnDessert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dessert"
                android:backgroundTint="#E91E63"
                android:textColor="#FFF" />
        </LinearLayout>

        <!-- Call to Action -->
        <TextView
            android:text="@string/ready_to_cook_something_amazing"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_marginBottom="50dp" />

    </LinearLayout>
</ScrollView>